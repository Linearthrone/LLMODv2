<Window x:Class="LLMOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LLMOverlay"
        Title="LLM Chat Overlay"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        
        MinWidth="350"
        MinHeight="500"
        
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        
        Loaded="Window_Loaded"
        MouseDown="Window_MouseDown"
        SizeChanged="Window_SizeChanged">

    <Grid x:Name="RootGrid">
        <!-- Main Content Area -->
        <Grid x:Name="MainContentGrid" 
              Visibility="Visible"
              Width="{Binding ActualWidth, ElementName=RootGrid}"
              HorizontalAlignment="Right">
            
            <!-- Background with Glass Effect -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E6000000" Offset="0"/>
                    <GradientStop Color="#E6111111" Offset="1"/>
                    <GradientStop Color="#22FFFFFF" Offset="0.5"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <Border BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="12">
                <Border BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="11">
                    <Grid Margin="2">
                        <!-- Title Bar -->
                        <Grid x:Name="TitleBar" Height="40" VerticalAlignment="Top" Background="#11000000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- App Icon and Title -->
                            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="12,0,0,0">
                                <TextBlock Text="ðŸ¤–" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="LLM Overlay" 
                                           FontFamily="Segoe UI" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Foreground="#FFFFFFFF"/>
                            </StackPanel>
                            
                            <!-- Window Controls -->
                            <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="0,0,8,0">
                                <Button x:Name="MinimizeButton" 
                                        Content="âˆ’" 
                                        Width="75" Height="75" 
                                        Margin="2"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Foreground="#FFFFFFFF"
                                        FontSize="16"
                                        Click="MinimizeButton_Click"/>
                                <Button x:Name="CloseButton" 
                                        Content="âœ•" 
                                        Width="32" Height="32" 
                                        Margin="2"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Foreground="#FFFFFFFF"
                                        FontSize="16"
                                        Click="CloseButton_Click"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Main Content -->
                        <Grid Margin="0,40,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Settings Panel -->
                            <Grid x:Name="SettingsPanel" Grid.Row="0" Margin="16,12" Visibility="Collapsed">
                                <Border Background="#44000000" CornerRadius="8" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Settings" FontSize="16" FontWeight="Bold" Foreground="#FFFFFFFF" Margin="0,0,0,12"/>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Text="API Key:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#FFFFFFFF" Margin="0,0,8,8"/>
                                            <TextBox x:Name="SettingsApiKeyInput" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>
                                            
                                            <TextBlock Text="Endpoint:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="#FFFFFFFF" Margin="0,0,8,8"/>
                                            <TextBox x:Name="SettingsEndpointInput" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>
                                            
                                            <TextBlock Text="Model:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="#FFFFFFFF" Margin="0,0,8,8"/>
                                            <ComboBox x:Name="SettingsModelComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
                                                <ComboBoxItem Content="gpt-3.5-turbo"/>
                                                <ComboBoxItem Content="gpt-4"/>
                                                <ComboBoxItem Content="claude-3"/>
                                                <ComboBoxItem Content="local"/>
                                                <ComboBoxItem Content="ollama"/>
                                                <ComboBoxItem Content="huggingface"/>
                                            </ComboBox>
                                            
                                            <Button x:Name="SaveSettingsButton" Content="Save Settings" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Margin="0,8,0,0" Click="SaveSettingsButton_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Chat Messages Area -->
                            <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="1" Margin="16,8" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="MessagesPanel" Orientation="Vertical"/>
                            </ScrollViewer>
                            
                            <!-- Input Area -->
                            <Grid x:Name="InputPanel" Grid.Row="2" Margin="16,8,16,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Character Counter -->
                                <TextBlock x:Name="CharacterCounter" 
                                           Grid.Row="0" 
                                           Text="0 / 4000" 
                                           HorizontalAlignment="Right" 
                                           Foreground="#88FFFFFF" 
                                           FontSize="12" 
                                           Margin="0,0,0,4"/>
                                
                                <!-- Input Box and Send Button -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox x:Name="MessageInputBox" 
                                             Grid.Column="0"
                                             Height="60" 
                                             TextWrapping="Wrap" 
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             Margin="0,0,8,0"
                                             TextChanged="MessageInputBox_TextChanged"
                                             KeyDown="MessageInputBox_KeyDown"/>
                                    
                                    <Button x:Name="SendButton" 
                                            Grid.Column="1"
                                            Width="60" Height="60" 
                                            Content="âž¤" 
                                            FontSize="20"
                                            Click="SendButton_Click"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Grid>
        
        <!-- Minimized Vertical Bar (Always Visible Tray) -->
        <Border x:Name="MinimizedTray"
                Width="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Panel.ZIndex="10"
                BorderBrush="#33FFFFFF"
                BorderThickness="1,0,0,0"
                Visibility="Collapsed"
                MouseDown="MinimizedTray_Click"
                Cursor="Hand">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E6000000" Offset="0"/>
                    <GradientStop Color="#E6111111" Offset="1"/>
                    <GradientStop Color="#22FFFFFF" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E6000000" Offset="0"/>
                                <GradientStop Color="#E6111111" Offset="1"/>
                                <GradientStop Color="#22FFFFFF" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FF2C5AA0" Offset="0"/>
                                        <GradientStop Color="#FF2C5AA0" Offset="1"/>
                                        <GradientStop Color="#55FFFFFF" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ¤–" 
                               FontSize="24" 
                               Foreground="White"
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"
                               Margin="0,0,0,6"/>
                    <StackPanel x:Name="TrayButtonsPanel"
                                Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <Button x:Name="CharacterManagerTrayButton"
                                Width="32" Height="32"
                                Background="Transparent"
                                BorderBrush="#66FFFFFF"
                                BorderThickness="1"
                                Margin="0,4,0,0"
                                ToolTip="Character Manager"
                                Click="CharacterManagerButton_Click">
                            <TextBlock Text="ðŸ‘¥"
                                       FontSize="20"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="WorldInfoTrayButton"
                                Width="32" Height="32"
                                Background="Transparent"
                                BorderBrush="#66FFFFFF"
                                BorderThickness="1"
                                Margin="0,4,0,0"
                                ToolTip="World Info"
                                Click="WorldInfoButton_Click">
                            <TextBlock Text="ðŸŒ"
                                       FontSize="20"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="SystemMonitorTrayButton"
                                Width="32" Height="32"
                                Background="Transparent"
                                BorderBrush="#66FFFFFF"
                                BorderThickness="1"
                                Margin="0,4,0,0"
                                ToolTip="System Monitor"
                                Click="SystemMonitorButton_Click">
                            <TextBlock Text="ðŸ“Š"
                                       FontSize="20"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="SettingsToggleButton"
                                Width="32" Height="32"
                                Background="Transparent"
                                BorderBrush="#66FFFFFF"
                                BorderThickness="1"
                                Margin="0,4,0,0"
                                Click="SettingsToggleButton_Click">
                            <TextBlock Text="ðŸ”§"
                                       FontSize="24"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="RadialMenuTrayButton"
                                Width="32" Height="32"
                                Background="Transparent"
                                BorderBrush="#66FFFFFF"
                                BorderThickness="1"
                                Margin="0,4,0,0"
                                ToolTip="Radial Menu"
                                Click="RadialMenuButton_Click">
                            <TextBlock Text="ðŸŽ¯"
                                       FontSize="20"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Radial menu launcher (top-left) -->
        <Button x:Name="RadialMenuTopButton"
                Width="56" Height="56"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="12"
                Background="#33000000"
                BorderBrush="#66FFFFFF"
                BorderThickness="1"
                Panel.ZIndex="20"
                Click="RadialMenuButton_Click">
            <Button.Content>
                <Image Source="Assets/llmod.ico" Width="32" Height="32" Stretch="Uniform"/>
            </Button.Content>
        </Button>
    </Grid>
</Window>