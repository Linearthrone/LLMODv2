<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- User Message Bubble Style -->
    <Style x:Key="UserMessageBubble" TargetType="Border">
        <Setter Property="Background" Value="#4A7C59"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,4,8,4"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="MaxWidth" Value="300"/>
    </Style>
    
    <!-- Assistant Message Bubble Style -->
    <Style x:Key="AssistantMessageBubble" TargetType="Border">
        <Setter Property="Background" Value="#2C3E50"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8,4,0,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="MaxWidth" Value="300"/>
    </Style>
    
    <!-- System Message Bubble Style -->
    <Style x:Key="SystemMessageBubble" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>
