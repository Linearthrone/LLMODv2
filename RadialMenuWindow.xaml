<Window x:Class="LLMOverlay.RadialMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RadialMenuWindow"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="72"
        Height="72">
    <Grid>
        <Button x:Name="RadialMenuButton"
                Width="48" Height="48"
                Background="Transparent"
                BorderThickness="0"
                Click="RadialMenuButton_Click">
            <Border Width="48" Height="48" CornerRadius="24" BorderBrush="#33FFFFFF" BorderThickness="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E6000000" Offset="0"/>
                        <GradientStop Color="#E6111111" Offset="1"/>
                        <GradientStop Color="#22FFFFFF" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Image Source="pack://application:,,,/Assets/app.ico" Stretch="Uniform"/>
            </Border>
        </Button>
        <Popup x:Name="RadialMenuPopup"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=RadialMenuButton}"
               AllowsTransparency="True"
               StaysOpen="False"
               PopupAnimation="Fade">
            <Border CornerRadius="12"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    Padding="12"
                    Width="260">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E6000000" Offset="0"/>
                        <GradientStop Color="#E6111111" Offset="1"/>
                        <GradientStop Color="#22FFFFFF" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="Quick Access"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="White"
                               Margin="0,0,0,8"/>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="Recent AI contacts"
                                   Foreground="#CCFFFFFF"
                                   FontSize="12"/>
                        <ItemsControl x:Name="RecentContactsList"
                                      Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="NoContactsText"
                                   Text="No AI responses yet"
                                   Foreground="#88FFFFFF"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="Current model"
                                   Foreground="#CCFFFFFF"
                                   FontSize="12"/>
                        <TextBlock x:Name="CurrentModelText"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="LoadModelButton"
                                Content="Load Model"
                                Padding="10,4"
                                Margin="0,0,8,0"
                                Click="LoadModelButton_Click"/>
                        <Button x:Name="CreatePersonaButton"
                                Content="Create Persona"
                                Padding="10,4"
                                Click="CreatePersonaButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
