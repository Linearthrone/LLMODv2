<Window x:Class="LLMOverlay.RadialMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RadialMenu" 
        Height="300" Width="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Grid>
        <!-- Background with Glass Effect -->
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#E6000000" Offset="0"/>
                <GradientStop Color="#E6111111" Offset="0.7"/>
                <GradientStop Color="#22FFFFFF" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        
