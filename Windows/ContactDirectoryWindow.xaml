<Window x:Class="LLMOverlay.ContactDirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contact Directory" Height="600" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Grid>
        <!-- Background with Glass Effect -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E6000000" Offset="0"/>
                <GradientStop Color="#E6111111" Offset="1"/>
                <GradientStop Color="#22FFFFFF" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Border BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="15">
            <Border BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="14">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title Bar -->
                    <Grid Grid.Row="0" Height="40" VerticalAlignment="Top" Background="#11000000">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Contact Directory" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0"/>
                        
                        <Button Grid.Column="1" x:Name="CloseButton" 
                                Content="âŒ" Width="30" Height="30" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Foreground="White" 
                                Click="CloseButton_Click"/>
                    </Grid>
                    
                    <!-- Search and Controls -->
                    <Grid Grid.Row="1" Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" x:Name="SearchTextBox" 
                                 Height="30" 
                                 Background="#40000000" 
                                 Foreground="White" 
                                 BorderBrush="#66FFFFFF" 
                                 BorderThickness="1" 
                                 Padding="5"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        
                        <Button Grid.Column="1" x:Name="NewContactButton" 
                                Content="âž• New" 
                                Width="80" Height="30" 
                                Background="#404ECDC4" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Margin="5,0"
                                Click="NewContactButton_Click"/>
                        
                        <Button Grid.Column="2" x:Name="ImportButton" 
                                Content="ðŸ“¥ Import" 
                                Width="80" Height="30" 
                                Background="#40FFA07A" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Margin="5,0"
                                Click="ImportButton_Click"/>
                        
                        <Button Grid.Column="3" x:Name="ExportButton" 
                                Content="ðŸ“¤ Export" 
                                Width="80" Height="30" 
                                Background="#409B59B6" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Margin="5,0"
                                Click="ExportButton_Click"/>
                    </Grid>
                    
                    <!-- Contact Grid -->
                    <DataGrid Grid.Row="2" x:Name="ContactsDataGrid" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False" 
                              Background="Transparent" 
                              Foreground="White" 
                              GridLinesVisibility="Horizontal" 
                              HorizontalGridLinesBrush="#33FFFFFF" 
                              VerticalGridLinesBrush="Transparent" 
                              HeadersVisibility="Column" 
                              Margin="0,10"
                              MouseDoubleClick="ContactsDataGrid_MouseDoubleClick">
                        
                        <DataGrid.Resources>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#404ECDC4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#22FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#404ECDC4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#40000000"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#66FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGrid.Resources>
                        
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Avatar" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Width="40" Height="40" 
                                                Background="#40000000" 
                                                BorderBrush="#66FFFFFF" 
                                                BorderThickness="1" 
                                                CornerRadius="20">
                                            <TextBlock Text="{Binding AvatarDisplay}" 
                                                       FontSize="20" 
                                                       Foreground="White" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            
                            <DataGridTextColumn Header="Model" Binding="{Binding BaseModel}" Width="120"/>
                            
                            <DataGridTextColumn Header="Last Active" Binding="{Binding LastActive, StringFormat='yyyy-MM-dd HH:mm'}" Width="150"/>
                            
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd'}" Width="120"/>
                            
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="âœï¸" 
                                                    Background="#40FFA07A" 
                                                    Foreground="White" 
                                                    BorderThickness="0" 
                                                    Width="30" Height="25" 
                                                    Margin="0,0,2,0" 
                                                    Click="EditButton_Click" 
                                                    Tag="{Binding Id}"/>
                                            <Button Content="ðŸ—‘ï¸" 
                                                    Background="#40FF6B6B" 
                                                    Foreground="White" 
                                                    BorderThickness="0" 
                                                    Width="30" Height="25" 
                                                    Margin="2,0,0,0" 
                                                    Click="DeleteButton_Click" 
                                                    Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Status Bar -->
                    <StatusBar Grid.Row="3" 
                               Background="#40000000" 
                               Foreground="White" 
                               BorderBrush="#66FFFFFF" 
                               BorderThickness="0,1,0,0">
                        <StatusBarItem>
                            <TextBlock x:Name="StatusText" Text="Ready"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>