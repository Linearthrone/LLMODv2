<Window x:Class="LLMOverlay.CreateContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Contact" Height="700" Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Grid>
        <!-- Background with Glass Effect -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E6000000" Offset="0"/>
                <GradientStop Color="#E6111111" Offset="1"/>
                <GradientStop Color="#22FFFFFF" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Border BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="15">
            <Border BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="14">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title Bar -->
                    <Grid Grid.Row="0" Height="40" VerticalAlignment="Top" Background="#11000000">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Create New Contact" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0"/>
                        
                        <Button Grid.Column="1" x:Name="CloseButton" 
                                Content="âŒ" Width="30" Height="30" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Foreground="White" 
                                Click="CloseButton_Click"/>
                    </Grid>
                    
                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                        <StackPanel>
                            <!-- Avatar Section -->
                            <GroupBox Header="Avatar" Foreground="White" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" x:Name="AvatarBorder" 
                                            Width="80" Height="80" 
                                            Background="#40000000" 
                                            BorderBrush="#66FFFFFF" 
                                            BorderThickness="1" 
                                            CornerRadius="40" 
                                            Margin="0,0,10,0">
                                        <TextBlock x:Name="AvatarPlaceholder" 
                                                   Text="ðŸ‘¤" FontSize="32" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock x:Name="AvatarPathText" 
                                                   Text="No avatar selected" 
                                                   Foreground="#AAAAAA" 
                                                   Margin="0,0,0,5"/>
                                        <Button x:Name="BrowseAvatarButton" 
                                                Content="Browse Avatar" 
                                                Background="#404ECDC4" 
                                                Foreground="White" 
                                                BorderThickness="0" 
                                                Padding="10,5" 
                                                Click="BrowseAvatarButton_Click"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2" x:Name="RemoveAvatarButton" 
                                            Content="Remove" 
                                            Background="#40FF6B6B" 
                                            Foreground="White" 
                                            BorderThickness="0" 
                                            Padding="10,5" 
                                            VerticalAlignment="Center" 
                                            Click="RemoveAvatarButton_Click"/>
                                </Grid>
                            </GroupBox>
                            
                            <!-- Basic Info -->
                            <GroupBox Header="Basic Information" Foreground="White" Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Name:" 
                                                   Foreground="White" 
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" x:Name="NameTextBox" 
                                                 Height="30" 
                                                 Background="#40000000" 
                                                 Foreground="White" 
                                                 BorderBrush="#66FFFFFF" 
                                                 BorderThickness="1" 
                                                 Padding="5"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Base Model:" 
                                                   Foreground="White" 
                                                   VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="1" x:Name="BaseModelComboBox" 
                                                  Height="30" 
                                                  Background="#40000000" 
                                                  Foreground="White" 
                                                  BorderBrush="#66FFFFFF" 
                                                  BorderThickness="1" 
                                                  Padding="5">
                                            <ComboBoxItem Content="gpt-4"/>
                                            <ComboBoxItem Content="gpt-3.5-turbo"/>
                                            <ComboBoxItem Content="claude-3-opus"/>
                                            <ComboBoxItem Content="claude-3-sonnet"/>
                                            <ComboBoxItem Content="claude-3-haiku"/>
                                            <ComboBoxItem Content="gemini-pro"/>
                                            <ComboBoxItem Content="llama-2-70b"/>
                                            <ComboBoxItem Content="mistral-7b"/>
                                            <ComboBoxItem Content="custom-local"/>
                                        </ComboBox>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                            
                            <!-- Physical Description -->
                            <GroupBox Header="Physical Description" Foreground="White" Margin="0,0,0,15">
                                <TextBox x:Name="PhysicalDescriptionTextBox" 
                                         Height="80" 
                                         TextWrapping="Wrap" 
                                         VerticalScrollBarVisibility="Auto" 
                                         Background="#40000000" 
                                         Foreground="White" 
                                         BorderBrush="#66FFFFFF" 
                                         BorderThickness="1" 
                                         Padding="5"
                                         Text="{Binding PhysicalDescription}"/>
                            </GroupBox>
                            
                            <!-- Personality -->
                            <GroupBox Header="Personality" Foreground="White" Margin="0,0,0,15">
                                <TextBox x:Name="PersonalityTextBox" 
                                         Height="100" 
                                         TextWrapping="Wrap" 
                                         VerticalScrollBarVisibility="Auto" 
                                         Background="#40000000" 
                                         Foreground="White" 
                                         BorderBrush="#66FFFFFF" 
                                         BorderThickness="1" 
                                         Padding="5"
                                         Text="{Binding Personality}"/>
                            </GroupBox>
                            
                            <!-- Skills -->
                            <GroupBox Header="Skills & Abilities" Foreground="White" Margin="0,0,0,15">
                                <TextBox x:Name="SkillsTextBox" 
                                         Height="80" 
                                         TextWrapping="Wrap" 
                                         VerticalScrollBarVisibility="Auto" 
                                         Background="#40000000" 
                                         Foreground="White" 
                                         BorderBrush="#66FFFFFF" 
                                         BorderThickness="1" 
                                         Padding="5"
                                         Text="{Binding Skills}"/>
                            </GroupBox>
                            
                            <!-- System Prompt -->
                            <GroupBox Header="System Prompt" Foreground="White" Margin="0,0,0,15">
                                <TextBox x:Name="SystemPromptTextBox" 
                                         Height="120" 
                                         TextWrapping="Wrap" 
                                         VerticalScrollBarVisibility="Auto" 
                                         Background="#40000000" 
                                         Foreground="White" 
                                         BorderBrush="#66FFFFFF" 
                                         BorderThickness="1" 
                                         Padding="5"
                                         Text="{Binding SystemPrompt}"/>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,10,0,0">
                        <Button x:Name="CancelButton" 
                                Content="Cancel" 
                                Width="80" Height="35" 
                                Background="#40FF6B6B" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Margin="0,0,10,0" 
                                Click="CancelButton_Click"/>
                        <Button x:Name="SaveButton" 
                                Content="Save Contact" 
                                Width="120" Height="35" 
                                Background="#404ECDC4" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Click="SaveButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>