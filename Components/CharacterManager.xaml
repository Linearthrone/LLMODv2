<UserControl x:Class="LLMOverlay.Components.CharacterManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500">
    
    <Grid Background="#E6000000">
        <Border BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="12" Margin="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E6000000" Offset="0"/>
                    <GradientStop Color="#E6111111" Offset="1"/>
                    <GradientStop Color="#22FFFFFF" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ‘¥" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Character Manager" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#FFFFFFFF"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Character List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="CharacterListPanel">
                        <!-- Character items will be added here -->
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="NewCharacterButton" Content="âž• New" 
                            Width="80" Height="35" Margin="0,0,10,0"
                            Click="NewCharacterButton_Click"/>
                    <Button x:Name="ImportCharacterButton" Content="ðŸ“¥ Import" 
                            Width="80" Height="35" Margin="0,0,10,0"
                            Click="ImportCharacterButton_Click"/>
                    <Button x:Name="CloseButton" Content="âœ• Close" 
                            Width="80" Height="35"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>