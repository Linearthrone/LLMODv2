<Window x:Class="LLMOverlay.Components.LoreItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lore Item" 
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Grid Background="#E6000000">
        <Border BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="12" Margin="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E6000000" Offset="0"/>
                    <GradientStop Color="#E6111111" Offset="1"/>
                    <GradientStop Color="#22FFFFFF" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“š" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Lore Item" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#FFFFFFFF"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Form Fields -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Title:" Foreground="#FFFFFFFF" Margin="0,0,0,5"/>
                        <TextBox x:Name="TitleTextBox" Height="30" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Content:" Foreground="#FFFFFFFF" Margin="0,0,0,5"/>
                        <TextBox x:Name="ContentTextBox" Height="120" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Tags (comma separated):" Foreground="#FFFFFFFF" Margin="0,0,0,5"/>
                        <TextBox x:Name="TagsTextBox" Height="30" Margin="0,0,0,15"/>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="CancelButton" Content="Cancel" 
                            Width="80" Height="35" Margin="0,0,10,0"
                            Click="CancelButton_Click"/>
                    <Button x:Name="SaveButton" Content="Save" 
                            Width="80" Height="35"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>